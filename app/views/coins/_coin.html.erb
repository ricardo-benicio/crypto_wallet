<div id="<%= dom_id coin %>">
  <form>
    <div class="form-group">
      <%= label_tag nil, coin.class.human_attribute_name(:description) %>
      <%= text_field_tag nil, coin.description, class: "form-control", disabled: true %>
    </div>

    <div class="form-group">
      <%= label_tag nil, coin.class.human_attribute_name(:acronym) %>
      <%= text_field_tag nil, coin.acronym, class: "form-control", disabled: true %>
    </div>

    <div class="form-group">
      <%= label_tag nil, coin.class.human_attribute_name(:url_image) %>
      <%= text_field_tag nil, coin.url_image, class: "form-control", disabled: true %>
    </div>

    <div class="form-group">
      <%= label_tag nil, coin.class.human_attribute_name(:mining_type_id) %>
      <%= text_field_tag nil, coin.mining_type_id, class: "form-control", disabled: true %>
    </div>
  </form>
</div>
