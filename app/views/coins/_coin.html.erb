<div id="<%= dom_id coin %>">
  <p>
    <strong>Descrição:</strong>
    <%= coin.description %>

    <strong>Sigla</strong>
    <%= coin.acronym %>
  </p>

  <p>
    <strong>Imagem:</strong>
    <%= image_tag coin.url_image, size: "25x25" %>
  </p>

  <p>
    <strong>Tipo mineração:</strong>
    <%= coin.mining_type.description %>
  </p>

</div>
